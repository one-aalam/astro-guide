---
export type Props = {
    note: string
}

const { note } = Astro.props as Props
---
<div class="my-6 p-4 bg-amber-50 dark:bg-amber-900/20 border-l-4 border-amber-500 dark:border-amber-600 rounded-r-lg">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-amber-600 dark:text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-amber-800 dark:text-amber-300">Author's Note</h3>
        <div class="mt-1 text-sm text-amber-700 dark:text-amber-400">
          <p>
            {note}
          </p>
        </div>
      </div>
    </div>
</div>