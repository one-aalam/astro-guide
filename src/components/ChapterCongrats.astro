        <div class="text-center flex flex-col items-center">
            <h1 class="text-4xl leading-tight font-semibold mb-4">
               You've Completed!
            </h1>
            <p class="text-gray-500 mb-4 leading-snug">
               Chapter {chapter.data.seriesOrdinal}: <strong>{chapter.data.title}</strong>
            </p>

            <div class="bg-white rounded-md px-4 py-2">
                Continue to Chapter {nextChapter.data.seriesOrdinal}:
                
                <a
                    class=" text-primary" href={nextChapter.guide.chapterSlug} title={nextChapter.data.title}>{nextChapter.data.title} â†’</a>
            </div>
        </div>
