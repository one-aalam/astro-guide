---

type Props = {
  title?: string;
  pros?: string[]
}

const { title = '', pros = [] } = Astro.props;
---
<div class="p-2 my-2 w-full">
      <span>{title}</span>
      <div class="mt-4">
        {pros.map((pro) => (
          <div class="flex font-medium items-baseline mb-2">
            <div class="h-4 w-4 mr-2 pt-1">
              <svg class="h-4 w-4 text-green-500" viewBox="0 0 24 24">
                <g
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M22 11.08V12a10 10 0 11-5.93-9.14" />
                  <path d="M22 4L12 14.01l-3-3" />
                </g>
              </svg>
            </div>
            <span>{pro}</span>
          </div>
        ))}
      </div>
    </div>