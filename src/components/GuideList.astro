---
import type { CollectionEntry } from 'astro:content';
import GuideCard from './GuideCard.astro'

interface Props {
    guides: Array<CollectionEntry<'guide'>>
}

const { guides } = Astro.props
// @ts-expect-error
const sortedGuides = guides.sort((a, b) => new Date(b.data.date) - new Date(a.data.date));
---
<section class="guide__list">
    {sortedGuides.map((guide) => (
        <GuideCard guide={guide}/>
    ))}
</section>
<style>
    .guide__list {
        @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 lg:gap-12 min-h-screen;
    }
</style>
