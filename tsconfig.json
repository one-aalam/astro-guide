{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "module": "ES2022",
    "lib": [
      "es2020"
    ],
    "target": "es2019",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "/Users/aftalam/Desktop/code/starter-kits/astro/astro-guide",
    "paths": {
      "$components/*": [
        "./src/components/*"
      ],
      "$/*": [
        "./src/*"
      ]
    },
    "types": [
      "astro/env"
    ],
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts"
  ]
}